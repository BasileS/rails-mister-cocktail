<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
      <div>
        <h1><%= @cocktail.name %></h1>
      </div>
      <table class="table">
        <thead class="thead-dark">
          <tr>
            <th scope="col">#</th>
            <th scope="col">Ingredient</th>
            <th scope="col">Dose</th>
            <th scope="col"></th>
          </tr>
        </thead>
        <tbody>
          <% @cocktail.doses.each do |dose| %>
          <tr>
            <td><%= dose.ingredient.name %></td>
            <td><%= dose.description %></td>
            <td> <%= link_to dose_path(dose), method: :delete, data: { confirm: "Delete #{dose.ingredient.name}?" } do %>
                <i class="far fa-trash-alt"></i></td>
          </tr>
          <% end %>
        </tbody>
      </table>
      <%= link_to "Add a new dose", new_cocktail_dose_path(@cocktail), class: 'btn btn-primary'%>
      <%= link_to "See all cocktails", cocktails_path, class: 'btn btn-primary'%>
    </div>
  </div>
</div>
